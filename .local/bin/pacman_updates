#!/usr/bin/env sh
# Syncs repositories and downloads updates, meant to be run as a cronjob.

ping -q -c 1 1.1.1.1 > /dev/null || exit

notify-send "ğŸ“¦ Repository Sync" "Checking for package updates..."

sudo pacman -Syyuw --noconfirm || notify-send "Error downloading updates.
Check your internet connection, if pacman is already running, or run update manually to see errors."

if pacman -Qu | grep -v "\[ignored\]"
then
	notify-send "ğŸ Repository Sync" "Updates available. Click statusbar icon (ğŸ“¦) for update." -t 3000
else
	notify-send "ğŸ“¦ Repository Sync"  "Sync complete. No new packages for update." -t 3000
fi


